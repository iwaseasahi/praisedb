<%- title @song.title -%>
<%- content_for :header do -%>
 <style type="text/css">
 html,body {
   overflow: hidden;
 }
 </style>
<%- end -%>
<div id='container'>
<%- @song.phrases.each_with_index do |phrase, idx| %>
    <pre id="<%= 'p' + idx.to_s %>" class="song shadow <%= idx > 0 ? 'hidden' : '' %>"><%= rubify  phrase %></pre>
<%- end -%>

<script type="text/javascript">
    $(function () {
        init();
        keybind();
    });

    function init() {
        var p0 = $('#p0')[0];
        resize(p0);
    }
    function keybind() {
        $(document).keydown(function(event) {
            if (event.keyCode === 38) {
                return songs_prev();
            } else if (event.keyCode === 40) {
                return songs_next();
            }
        });
    }
</script>
</div>
