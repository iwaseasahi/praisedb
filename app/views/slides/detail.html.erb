<%- title @slide.title -%>
<%- content_for :header do -%>
 <style type="text/css">
 html,body {
   overflow: hidden;
 }
 </style>
<%- end -%>
<div id="container">
<%- @slide.pages.each_with_index do |page, idx| -%>
  <%- hidden_class = idx > 0 ? 'hidden' : '' -%>
  <pre id="<%= 'p' + idx.to_s %>" class="slide shadow <%= hidden_class %>"><%= page %></pre>
<%- end -%>

<script type="text/javascript">
    $(function () {
        init();
        keybind();
    });

    function init() {
        resize($('#p0')[0]);
    }
    function keybind() {
        $(document).keydown(function(event) {
            if (event.keyCode === 38) {
                return slides_prev();
            } else if (event.keyCode === 40) {
                return slides_next();
            }
        });
    }
</script>
</div>
